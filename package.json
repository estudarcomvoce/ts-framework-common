{
  "name": "ts-framework-common",
  "version": "2.0.1",
  "description": "A minimalistic web framework for TS",
  "author": "Luis Brito <luis@nxtep.io>",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nxtep-io/ts-framework-common.git"
  },
  "scripts": {
    "build": "yarn run -s clean && tsc",
    "clean": "rimraf ./dist",
    "test": "jest --config jest.json",
    "lint": "tslint --config tslint.json --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{api,config,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/raven": "^2.5.1",
    "@types/winston": "^2.3.9",
    "clean-stack": "^1.3.0",
    "raven": "^2.6.3",
    "winston": "2.4",
    "winston-raven-sentry": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.3",
    "ts-jest": "^23.1.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-no-circular-imports": "^0.5.0",
    "typescript": "^3.0.1"
  }
}
